page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 3;
  height: 100%;
}
.search_row button {
  flex: 1;
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-style: 26rpx;
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-style: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
